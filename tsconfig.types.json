{
  "extends": "./tsconfig",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "rootDir": "src",
    "outDir": "lib/typescript"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "lib",
    "**/__tests__/**",
    "**/__fixtures__/**",
    "**/__mocks__/**"
  ]
} 