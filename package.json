    "prettier": "^3.2.0",
    "react-native-reanimated": "^3.0.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.34.9",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "typescript": "^5.3.3"
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  }
